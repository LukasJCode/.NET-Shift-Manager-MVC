@using ShiftManager.Models.ViewModels;
@model ShiftVM;

<h1>Create Shift</h1>
<div class="custom-container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <label>Employee For The Shift</label>
            <select asp-for="EmployeeId" class="form-control gy-2" asp-items="ViewBag.Employees"></select>
        </div>
        <div class="row">
            <label>Jobs For The Shift</label>
            <select asp-for="JobIds" class="form-control gy-2" asp-items="ViewBag.Jobs" multiple></select>
        </div>
        <div class="row gy-2">
            <label>Shift Start:</label>
            <input asp-for="ShiftStart" type="datetime-local" class="form-control form-control-lg" />
        </div>
        <div class="row gy-2">
            <label>Shift End:</label>
            <input asp-for="ShiftEnd" type="datetime-local" class="form-control form-control-lg" />
        </div>
        <div class="d-flex justify-content-center row">
            <button class="btn btn-primary btn-lg gy-2" type="submit">Create</button>
        </div>
    </form>
    <form>
        <div class="d-flex justify-content-center row">
            <button asp-controller="Shift" asp-action="Index" class="btn btn-primary btn-lg gy-2">Back</button>
        </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
